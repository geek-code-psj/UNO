{
  "name": "uno-arena",
  "version": "1.0.0",
  "description": "Real-time multiplayer UNO card game with AI bots, offline play, tournaments, leaderboards, and cosmetics",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "node --watch server/index.js",
    "cap:init": "npx cap sync",
    "cap:sync": "npx cap sync android",
    "cap:open": "npx cap open android",
    "cap:build": "cd android && gradlew assembleDebug"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/geek-code-psj/UNO.git"
  },
  "keywords": [
    "uno",
    "multiplayer",
    "card-game",
    "socketio",
    "pwa",
    "offline"
  ],
  "author": "geek-code-psj",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.6.2",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "socket.io": "^4.8.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@capacitor/android": "^8.1.0",
    "@capacitor/cli": "^8.1.0",
    "@capacitor/core": "^8.1.0"
  }
